{
  "name": "my-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:stable": "NODE_OPTIONS='--max_old_space_size=4096' next dev",
    "dev:clean": "npm run clean && npm run dev:stable",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "clean": "rm -rf .next && rm -rf node_modules/.cache",
    "kill-port": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true",
    "restart": "npm run kill-port && npm run clean && npm run dev:stable",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev",
    "health": "node dev-helper.js health",
    "full-restart": "node dev-helper.js full-restart && npm run dev:stable"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "framer-motion": "^11.15.0",
    "next": "^14.2.14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^4.12.0",
    "react-intersection-observer": "^9.16.0",
    "tailwind-merge": "^2.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.14",
    "mini-svg-data-uri": "^1.4.4",
    "postcss": "^8.5.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.0"
  }
}
